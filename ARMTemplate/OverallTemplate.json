{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "iot_hub_name": {
            "type": "string"
        },
        "app_insight_name": {
            "type": "string"
        },
        "func_app_name": {
            "type": "string"
        },
        "func_app_plan_name": {
            "type": "string"
        },
        "func_apps_site_name": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "ai_location": {
            "type": "string"
        }
    },
    "variables": {
        "StorageAccountName": "[parameters('func_app_name')]"
    },
    "resources": [
        {
            "type": "Microsoft.Devices/IotHubs",
            "sku": {
                "name": "F1",
                "tier": "Free",
                "capacity": 1
            },
            "name": "[parameters('iot_hub_name')]",
            "apiVersion": "2016-02-03",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": 2
                    }
                },
                "enableFileUploadNotifications": false,
                "features": "None"
            },
            "dependsOn": []
        },
        {
            "type": "microsoft.insights/components",
            "kind": "other",
            "name": "[parameters('app_insight_name')]",
            "apiVersion": "2014-04-01",
            "location": "[parameters('ai_location')]",
            "tags": {},
            "properties": {
                "ApplicationId": "[parameters('app_insight_name')]"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('func_app_name')]",
            "apiVersion": "2016-01-01",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {},
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "name": "[parameters('func_app_plan_name')]",
            "apiVersion": "2015-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[parameters('func_app_plan_name')]",
                "numberOfWorkers": 0
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[parameters('func_apps_site_name')]",
            "apiVersion": "2015-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[parameters('func_apps_site_name')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('StorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('StorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('StorageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(toLower(parameters('func_apps_site_name')), 'IoTFunc')]"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "6.5.0"
                        }
                    ]
                },                
                "hostNameSslStates": [
                    {
                        "name": "[concat(parameters('func_apps_site_name'),'.azurewebsites.net')]",
                        "sslState": 0,
                        "thumbprint": null,
                        "ipBasedSslState": 0
                    },
                    {
                        "name": "[concat(parameters('func_apps_site_name'),'.scm.azurewebsites.net')]",
                        "sslState": 0,
                        "thumbprint": null,
                        "ipBasedSslState": 0
                    }
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('func_app_plan_name'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('func_app_plan_name'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('func_app_name'))]"
            ]
        }
    ]
}